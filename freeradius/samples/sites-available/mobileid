authorize {
        # Cleanups with preprocess
	preprocess

	# Password checks
	chap
	mschap

	# Suffix handling for realms
	suffix

	# Read the 'users' from either file, sql or ldap
	files
	# sql
	# ldap

	# Password check with PAP (give the other a chance)
	pap
}

authenticate {
	Auth-Type PAP {
		pap
	}
	Auth-Type CHAP {
                chap
	}
	Auth-Type MS-CHAP {
		mschap
	}
	# Uncomment it if you want to use ldap for authentication
	# Auth-Type LDAP {
	#       ldap
	# }
}

post-auth {
	# Update request with values from users database
        update request {
                Called-Station-Id := "%{control:Called-Station-Id}"
		X-MSS-Language := "%{control:X-MSS-Language}"
	}

	# Set Called-Station-Id to User-Name, if not found.
	if (!Called-Station-Id || Called-Station-Id == "") {
        	update request {
			Called-Station-Id := "%{User-Name}"
		}
	}

	# Set data to be signed
	switch X-MSS-Language {
		case de {
			update request {
				X-MSS-Message := "myserver.com: Wollen Sie sich anmelden?"
			}
		}
		case fr {
			update request {
				X-MSS-Message := "myserver.com: Voulez-vous vous connecter?"
			}
		}
		case it {
			update request {
				X-MSS-Message := "myserver.com: Vuoi fare il login?"
			}
		}
		case {
			update request {
				X-MSS-Language := "en"
				X-MSS-Message  := "myserver.com: Do you want to login?"
			}
		}
	}

	# Callout Mobile ID
	mobileid

	Post-Auth-Type REJECT {
		attr_filter.access_reject
	}
}